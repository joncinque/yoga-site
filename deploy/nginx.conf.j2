
upstream {{ django_project }} {
    server {{ socket_path }} fail_timeout=0;
}

server {

    listen 80;
    server_name {{ root_domain }};
    client_max_body_size 75M;
    keepalive_timeout 15;
    error_log {{ repo_dir }}/{{ django_project }}_error_nginx.log info;

{% if force_ssl | bool %}
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/{{ root_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ root_domain }}/privkey.pem;
    ssl_session_cache shared:le_nginx_SSL:1m;
    ssl_session_timeout 14400m;
    ssl_protocols TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers HIGH:!aNULL:!MD5;
{% endif %}

    # Deny illegal Host headers
    if ($host !~* ^(%(domains_regex)s)$) {
        return 444;
    }

    location / {
        proxy_redirect off;
        proxy_pass http://{{ django_project }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-HOST $server_name;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        add_header P3P 'CP="ALL DSP COR PSAa PSDa OUR NOR ONL UNI COM NAV"';
    }

    location /static/ {
        root {{ repo_dir }};
        access_log off;
        log_not_found off;
        expires 30d;
    }

    location /robots.txt {
        root {{ repo_dir }}/static;
        access_log off;
        log_not_found off;
    }

    location /favicon.ico {
        root {{ repo_dir }}/static/img;
        access_log off;
        log_not_found off;
    }

}
